generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//better auth schema
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions Session[]
  accounts Account[]
  tasks    Task[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([providerId, accountId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Task {
  id        String      @id @default(cuid())
  name      String
  notes     String?
  deadline  DateTime
  type      TaskType
  status    TaskStatus?
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  reminder  Reminder?
}

enum TaskType {
  PERSONAL
  WORK
  HEALTH
}

enum TaskStatus {
  INCOMING
  COMPLETED
  OVERDUE
}

model Reminder {
  id                 String       @id @default(cuid())
  before48h          Boolean      @default(false)
  before24h          Boolean      @default(true)
  before12h          Boolean      @default(true)
  before6h           Boolean      @default(false)
  before3h           Boolean      @default(false)
  before1h           Boolean      @default(true)
  before0h           Boolean      @default(true)
  after_due_reminder AfterDueCron 
  taskId             String       @unique
  task               Task         @relation(fields: [taskId], references: [id])

  createdAt DateTime @default(now())
}

enum AfterDueCron {
  after_every_12h
  after_every_24h
  after_every_48h
  after_every_6h
  none
}
